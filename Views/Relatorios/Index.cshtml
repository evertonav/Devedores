
@{
    ViewData["Title"] = "Index";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="RelatorioSintetico">
            <fieldset>
                <legend>Relatório Sintético</legend>
                <div class="form-group">
                    <label for="pago" class="col-lg-2 control-label">Pago</label>
                    <div class="col-lg-10">
                        <input type="checkbox" id="pago" name="pago" class="form-control" style="width:50px" value="1" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Gerar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="RelatorioAnalitico">
            <fieldset>
                <legend>Relatório Analítico</legend>

                <div class="form-group">
                    <label for="pago" class="col-lg-2 control-label">Pago</label>
                    <div class="col-lg-10">
                        <input type="checkbox" id="pago" name="pago" class="form-control" style="width:50px" value="1" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Gerar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

