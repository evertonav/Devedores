@model IEnumerable<Devedores.Models.Devedor>

@{
    ViewData["Title"] = "Relatório Sintético";
}

<h2>@ViewData["Title"]</h2>

<div class="panel panel-primary">
    <!--<div class="panel-heading">
        <h3 class="panel-title">Total vendas = Model.Sum(obj => obj.Quantidade).ToString("F2")</h3>
    </div>-->
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Pessoa.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Pago)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pessoa.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pago)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



