@model IEnumerable<Devedores.Models.Devedor>

@{
    ViewData["Title"] = "Devedores";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Inserir" class="btn btn-success">Inserir</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pessoa.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pago)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pago)
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                <!--<a asp-action="Details" asp-route-id="@item.Id">Details</a> |-->
                <a asp-action="Deletar" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
            </td>
        </tr>
        }
    </tbody>
</table>


