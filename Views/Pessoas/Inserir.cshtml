@using Devedores.Controllers.Enums
@model Devedores.Models.Pessoa

@{
    ViewData["Title"] = "Pessoa>Inserir";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Inserir">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Inserir" class="btn btn-default" />
                @if (ViewData["retornarPagina"].Equals(PaginaRetorno.DevedorInserir)) 
                {
                    <a asp-action="DevedorInserir">Voltar para Devedores>Inserir</a>
                } 
                else
                {
                    <a asp-action="DevedorEditar">Voltar para Devedores>Editar</a>
                }
                
            </div>
        </form>
    </div>
</div>



